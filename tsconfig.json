{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020"],
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "axon-ai": ["./src/index"],
            "axon-ai/*": ["./src/*"]
        }
    },
    "include": ["src/**/*", "examples/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
}
